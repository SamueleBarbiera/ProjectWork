<form action="/login" method="post">
    <div>
        {{#if error}}
            <p class="err-msg">lo Username o la password sono sbagliati</p>
        {{/if}}
        <h1>Login</h1>
    </div>
    <div class="form-group">
        <label>Username: </label>
        <input
            type="text"
            name="username"
            id="username"
            placeholder="Inserisci l'Username"
            required
        />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input
            type="password"
            name="password"
            id="password"
            placeholder="Inserisci la Password"
            required
        />
    </div>
    <div>
        <input type="submit" class="link" value="Accedi" />
    </div>
</form>